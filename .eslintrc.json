{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "@typescript-eslint/naming-convention": "warn",
        "@typescript-eslint/semi": "warn",
        "curly": "warn",
        "eqeqeq": "warn",
        "no-throw-literal": "warn",
        "semi": "off",
        "linebreak-style": ["error", "windows"],
        "valid-jsdoc": "off",
        "require-jsdoc": "off",
        "guard-for-in": "off",
        "max-len": ["error", { "code": 120 }],
        "indent": ["error", 4],
        "no-tabs": ["error", { "allowIndentationTabs": true }]
    },
    "ignorePatterns": [
        "out",
        "dist",
        "**/*.d.ts"
    ],
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "google"
    ]
}
